<Window x:Class="LTUDTXD_HUCE_2_VuQuangMinh_0066567_67TH3.View.phuongancoc"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LTUDTXD_HUCE_2_VuQuangMinh_0066567_67TH3.View"
        mc:Ignorable="d"
        Title="phuongancoc" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="36" Margin="10,50,0,0">
            <RadioButton Content="Cọc vuông" GroupName="coc" />
            <RadioButton Content="Cọc tròn" GroupName="coc" Margin="150 0 0 0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" Width="300" Margin="0,91,0,0">
            <StackPanel Orientation="Horizontal" Height="41">
                <Label Content="Tiết diện" Height="25" Margin="20,10,30,0" Width="122" HorizontalAlignment="Center"/>
                <ComboBox  Height="25" Margin="0,10,0,0" Width="122" HorizontalAlignment="Center">
                    <ComboBoxItem Content="0.2m" />
                    <ComboBoxItem Content="0.25m" />
                    <ComboBoxItem Content="0.3m" />
                    <ComboBoxItem Content="0.35m" />
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="41">
                <Label Content="Chiều dài cọc" Height="25" Margin="20,10,30,0" Width="122" HorizontalAlignment="Center"/>
                <ComboBox  Height="25" Margin="0,10,0,0" Width="122" HorizontalAlignment="Center">
                    <ComboBoxItem Content="5m" />
                    <ComboBoxItem Content="6m" />
                    <ComboBoxItem Content="7m" />
                    <ComboBoxItem Content="8m" />
                    <ComboBoxItem Content="9m" />
                    <ComboBoxItem Content="10m" />
                    <ComboBoxItem Content="11m" />
                </ComboBox>
            </StackPanel>
        </StackPanel>
        <Button Content="OK" Foreground="White" Height="30" HorizontalAlignment="Center" Margin="0,209,0,0" VerticalAlignment="Top" Width="70">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="#03346E" BorderBrush="Black" BorderThickness="1" CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
