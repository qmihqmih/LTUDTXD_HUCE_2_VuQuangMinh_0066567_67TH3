<Window x:Class="LTUDTXD_HUCE_2_VuQuangMinh_0066567_67TH3.View.ground"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LTUDTXD_HUCE_2_VuQuangMinh_0066567_67TH3.ViewModel"
        mc:Ignorable="d"
        Title="ground" Height="450" Width="800">
    <Window.DataContext>
        <local:GroundViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListView Name="GroundGrid" Grid.Row="1" Margin="10,320,5,5" ItemsSource="{Binding Ground}" >
            <ListView.View>
                <GridView x:Name="grdTest">
                    <GridViewColumn Header="Lớp đất" DisplayMemberBinding="{Binding Lopdat}" Width="50"/>
                    <GridViewColumn Header="φ" DisplayMemberBinding="{Binding Phi}" Width="60"/>
                    <GridViewColumn Header="Chiều dày" DisplayMemberBinding="{Binding H}" Width="60"/>
                    <GridViewColumn Header="γ" DisplayMemberBinding="{Binding Gamma}" Width="60"/>
                    <GridViewColumn Header="Độ dính C" DisplayMemberBinding="{Binding C}" Width="60"/>
                    <GridViewColumn Header="Mođun E" DisplayMemberBinding="{Binding Modun}" Width="60"/>
                    <GridViewColumn Header="Δ" DisplayMemberBinding="{Binding Delta}" Width="60"/>
                    <GridViewColumn Header=" N (SPT)" DisplayMemberBinding="{Binding Spt}" Width="60"/>
                    <GridViewColumn Header=" qc (CPT)" DisplayMemberBinding="{Binding Cpt}" Width="60"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Content="Lưu dữ liệu" 
        Command="{Binding SaveCommand}" 
        HorizontalAlignment="Right" 
        VerticalAlignment="Bottom" 
        Width="120" Height="30" Margin="0,0,192,176" Grid.Row="1"/>

        <Button Content="Update" Grid.Row="1" Height="23" HorizontalAlignment="Center" Margin="0,287,0,0" Name="btnUpdate" VerticalAlignment="Top" Width="100" Command="{Binding Path=UpdateCommand}" />

        <Label Content="φ :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,5,0,0" Grid.RowSpan="2" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="130,7,0,0" Name="txtPhi" VerticalAlignment="Top" Width="100" Text="{Binding ElementName=GroundGrid, Path=SelectedItem.Phi}"/>

        <Label Content="Chiều dày :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,33,0,0" Grid.RowSpan="2" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="130,35,0,0" Name="txtH" VerticalAlignment="Top" Width="100" Text="{Binding ElementName=GroundGrid, Path=SelectedItem.H}"/>

        <Label Content="Gamma γ :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,61,0,0" Grid.RowSpan="2" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="130,63,0,0" Name="txtGamma" VerticalAlignment="Top" Width="100" Text="{Binding ElementName=GroundGrid, Path=SelectedItem.Gamma}"/>

        <Label Content="Độ kết dính C :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,89,0,0" Grid.RowSpan="2" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="130,91,0,0" Name="txtC" VerticalAlignment="Top" Width="100" Text="{Binding SelectedItem.C, ElementName=GroundGrid}"/>

        <Label Content="Môđun đàn hồi E :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,117,0,0" Grid.RowSpan="2" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="130,119,0,0" Name="txtModun" VerticalAlignment="Top" Width="100" Text="{Binding SelectedItem.Modun, ElementName=GroundGrid}"/>

        <Label Content="Δ :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,145,0,0" Grid.RowSpan="2" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="130,147,0,0" Name="txtDelta" VerticalAlignment="Top" Width="100" Text="{Binding SelectedItem.Delta, ElementName=GroundGrid}"/>

        <Label Content="N(SPT) :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,257,0,0" Grid.RowSpan="2" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="130,259,0,0" Name="txtSpt" VerticalAlignment="Top" Width="100" Text="{Binding SelectedItem.Spt, ElementName=GroundGrid}"/>

        <Label Content="qc(CPT) :" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="17,285,0,0" Grid.RowSpan="2" />
        <TextBox Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="130,287,0,0" Name="txtCpt" VerticalAlignment="Top" Width="100" Text="{Binding SelectedItem.Cpt, ElementName=GroundGrid}"/>

    </Grid>
</Window>
